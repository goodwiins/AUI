#include <stdio.h>
void sort_array(int array[]);
void fill_array(int array[]);

int n;

int main(void) {
  int array[50];
  int i,j;
  //Defining the size of the array  
  printf("Array size: ");
  scanf("%d",&n);
  fill_array(array);
  sort_array(array);
  for(int a=0;a<n;a++){
    printf("%d\n",array[a]);
  }

  return 0;
}
//filling the array
void fill_array(int array[]){
  
	for(int i = 0; i < n; i++){
    printf("Elements %d: ",i);
    scanf("%d", &array[i]);
  }}

void sort_array(int array[]){
  int i,j,tmp;
  for (i = 0; i < n; i++){
      for (j = 0; j < n; j++){
        if (array[j] > array[i]){
          tmp = array[i];         
          array[i] = array[j];            
          array[j] = tmp;            
}}}}
